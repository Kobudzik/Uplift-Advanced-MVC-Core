@model Uplift.Models.WebImages

@{
    var title = "Create Images";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" enctype="multipart/form-data">

    <div class="row px-2 mx-2 backgroundWhite border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.Id != 0)//aby przechowało id przy edicie
        {
            <input type="hidden" asp-for="Id" />
            title = "Edit Image";
        }

        <div class="col-12">
            <h2 class="text-primary">@title</h2>
            <br />
        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Picture"></label>
                </div>
                <div class="col-8">
                    <input type="file" id="projectImage" name="files" multiple asp-for="Picture" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.Id != 0)
                    {
                        //edit button and back to list button
                        <partial name="_EditAndBackToListButton" model="Model.Id" />

                    }
                    else
                    {
                        //create button and back to list button
                        <partial name="_CreateAndBackToListButton" />

                    }
                </div>
            </div>
        </div>

    </div>

</form>